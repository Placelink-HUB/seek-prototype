package biz.placelink.aicas.analysis.service;

import biz.placelink.aicas.analysis.vo.DiseaseCdVO;
import org.springframework.stereotype.Service;

import java.util.List;

/**
 * <pre>
 * << 개정이력(Modification Information) >>
 *
 *  수정일                수정자        수정내용
 *
 *  ------------       --------    ---------------------------
 *
 *  2025. 02. 10.      s2          최초생성
 * </pre>
 */
@Service
public class DiseaseCdService {

    private final DiseaseCdMapper diseaseCdMapper;

    public DiseaseCdService(DiseaseCdMapper diseaseCdMapper) {
        this.diseaseCdMapper = diseaseCdMapper;
    }

    /**
     * 질병 코드 목록을 조회한다.
     *
     * @return 질병 코드 목록
     */
    public List<DiseaseCdVO> selectDiseaseCdList() {
        return diseaseCdMapper.selectDiseaseCdList();
    }

}