package biz.placelink.aicas.analysis.service;

import biz.placelink.aicas.analysis.vo.AnalysisRequestVO;
import org.apache.ibatis.annotations.Mapper;
import org.apache.ibatis.annotations.Param;

import java.util.List;

/**
 * <pre>
 * << 개정이력(Modification Information) >>
 *
 *  수정일                수정자        수정내용
 *
 *  ------------       --------    ---------------------------
 *
 *  2025. 02. 03.      s2          최초생성
 * </pre>
 */
@Mapper
public interface AnalysisRequestMapper {

    /**
     * 분석 요청 정보를 등록한다.
     *
     * @param paramVO 분석 요청 정보
     * @return 등록 개수
     */
    int insertAnalysisRequest(AnalysisRequestVO paramVO);

    /**
     * 분석 요청 정보 상태를 수정한다.
     *
     * @param analysisId        분석 ID
     * @param analysisStatusCcd 분석 상태 공통코드
     * @return 등록 개수
     */
    int updateAnalysisRequestStatus(@Param("analysisId") String analysisId, @Param("analysisStatusCcd") String analysisStatusCcd);

    /**
     * 실행 시간이 초과된 분석을 오류 처리한다.
     *
     * @param maxMinutes 최대 허용 시간(분)
     */
    void updateAnalysisTimeoutError(@Param("maxMinutes") int maxMinutes);

    /**
     * 실행하려는 분석 요청 정보 목록을 조회한다.
     *
     * @param maxCount 분석기 서버에 요청할 수 있는 최대(스레드) 수
     * @return 분석 요청 정보 목록
     */
    List<AnalysisRequestVO> selectAnalysisRequestListToExecuted(@Param("maxCount") int maxCount);

}