{
  /* GitHub Copilot 설정 */
  "github.copilot.enable": {
    "*": true, // 모든 파일에서 Copilot 활성화 (true: 활성화)
    "plaintext": false, // 일반 텍스트 파일에서 Copilot 비활성화 (false: 비활성화)
    "markdown": false, // Markdown 파일에서 Copilot 비활성화 (false: 비활성화)
    "scminput": false, // 소스 제어 입력에서 Copilot 비활성화 (false: 비활성화)
    "git-commit": false, // Git 커밋 메시지 입력에서 Copilot 비활성화 (false: 비활성화)
    "log": false // 로그 파일에서 Copilot 비활성화 (false: 비활성화)
  },

  /* 설정 동기화 관련 */
  "settingsSync.ignoredExtensions": [], // 동기화에서 제외할 확장 프로그램 목록 (빈 배열: 모든 확장 동기화)
  "settingsSync.ignoredSettings": [], // 동기화에서 제외할 설정 목록 (빈 배열: 모든 설정 동기화)

  /* Java 및 Spring Boot 설정 */
  "spring-boot.ls.java.home": "C:/DevTools2/runtime/java/openjdk-21_35", // Spring Boot Language Server에서 사용할 JDK 경로
  "java.jdt.ls.java.home": "C:/DevTools2/runtime/java/openjdk-21_35", // Java Language Server의 VM 옵션
  "java.configuration.runtimes": [
    {
      "name": "JavaSE-1.8",
      "path": "C:/DevTools2/runtime/java/openjdk-8u44"
    },
    {
      "name": "JavaSE-21",
      "path": "C:/DevTools2/runtime/java/openjdk-21_35",
      "default": true
    }
  ],
  "java.import.gradle.home": "C:/DevTools2/runtime/gradle/gradle-8.13", // Gradle 실행 파일 경로
  "java.import.gradle.user.home": "C:/DevTools2/runtime/gradle/repository", // Gradle 사용자 홈 디렉토리
  "java.format.settings.url": "file:///C:/DevTools2/formatter/s2-code-style.xml", // Java 코드 스타일 설정 파일 경로
  "java.format.settings.profile": "Standard-s2", // Java 코드 스타일 프로필 이름
  "java.debug.settings.console": "integratedTerminal", // 디버깅 콘솔을 통합 터미널로 설정
  "java.test.config": {
    "workingDirectory": "${workspaceFolder}" // 테스트 실행 시 작업 디렉토리 설정 ("${workspaceFolder}": 현재 워크스페이스)
  },

  /* 에디터 기본 설정 */
  "editor.fontFamily": "Consolas, 'Courier New', monospace", // 에디터 글꼴
  "editor.fontSize": 14, // 에디터 글꼴 크기
  "editor.lineHeight": 1.5, // 줄 높이 (배수)
  "editor.formatOnSave": true, // 저장 시 자동 포맷팅 여부
  "editor.formatOnPaste": false, // 붙여넣기 시 포맷팅 여부
  "editor.defaultFormatter": "esbenp.prettier-vscode", // 기본 포맷터 ("esbenp.prettier-vscode": Prettier)
  "editor.detectIndentation": false, // 자동 들여쓰기 감지 여부부
  "editor.tabSize": 2, // 탭 크기 (칸 수)
  "editor.insertSpaces": true, // 탭 대신 스페이스 사용 (true: 활성화)
  "editor.minimap.enabled": true, // 미니맵 활성화 (true: 활성화)
  "editor.cursorSmoothCaretAnimation": "on", // 커서 이동 애니메이션 활성화 ("on": 활성화)
  "editor.renderWhitespace": "none", // 공백 문자 표시 ("none": 표시 안 함)
  "editor.wordWrap": "off", // 긴 줄 자동 줄바꿈 ("off": 줄바꿈 안 함)
  "editor.wordWrapColumn": 9999, // wordWrapColumn 사용 시 기준 열 설정 (120자)
  // "editor.rulers": [120], // 줄 길이 (120자에 세로선 표시)
  "editor.unicodeHighlight.ambiguousCharacters": false, // 유니코드 문자 경고 비활성화 (false: 비활성화)
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit", // 저장 시 import 정리 ("explicit": 명시적으로만)
    "source.fixAll": "never", // 저장 시 모든 문제 수정 ("never": 비활성화)
    "source.fixAll.editorconfig": "explicit" // EditorConfig 규칙 준수 ("explicit": 명시적으로만)
  },
  "editor.suggestSelection": "first", // 최근 사용한 항목을 우선 표시 ("first": 첫 번째 항목 선택)

  /* 파일 관련 설정 */
  "files.autoGuessEncoding": true, // 파일 인코딩 자동 감지 (true: 활성화)
  "files.encoding": "utf8", // 기본 파일 인코딩 설정 ("utf8": UTF-8 사용)
  "files.eol": "\n", // 줄바꿈 문자 설정 ("\n": LF 사용)
  "files.insertFinalNewline": true, // 파일 끝에 새 줄 추가 (true: 활성화)
  "files.trimTrailingWhitespace": true, // 줄 끝 공백 제거 (true: 활성화)
  "files.exclude": {
    // VS Code 탐색기에서 파일 및 폴더 숨기기 설정 (검색 기능이나 다른 작업에는 영향을 주지 않음)
    "**/.classpath": true, // Eclipse 클래스 경로 파일 (true: 제외)
    "**/.project": true, // Eclipse 프로젝트 파일 (true: 제외)
    "**/.settings": true, // Eclipse 설정 디렉토리 (true: 제외)
    "**/.factorypath": true, // Eclipse APT 설정 (true: 제외)
    "**/bin": true, // 빌드 출력 디렉토리 (true: 제외)
    "**/out": true // IntelliJ IDEA 출력 디렉토리 (true: 제외)
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true, // Git 객체 디렉토리 (true: 제외)
    "**/.git/subtree-cache/**": true, // Git 서브트리 캐시 (true: 제외)
    "**/node_modules/*/**": true, // Node.js 모듈 (true: 제외)
    "**/build/**": true // Gradle 빌드 폴더 (true: 제외)
  },
  "files.associations": {},

  /* 검색 설정 */
  "search.exclude": {
    // VS Code 검색 기능에서 파일 및 폴더 숨기기 설정 (탐색기에는 영향을 주지 않음)
    "**/node_modules/**": true, // Node.js 모듈 (true: 제외)
    "**/build/**": true, // Gradle 빌드 디렉토리 (true: 제외)
    "**/out/**": true, // IntelliJ IDEA 출력 디렉토리 (true: 제외)
    "**/bin/**": true // 빌드 출력 디렉토리 (true: 제외)
  },
  "search.useIgnoreFiles": true, // .gitignore 및 .ignore 파일에 정의된 경로를 검색에서 제외 (true: 활성화 시 .gitignore/.ignore에 설정된 파일과 폴더는 검색 결과에서 제외됨)
  "search.useGlobalIgnoreFiles": true, // 전역 .gitignore 및 .ignore 파일에 정의된 경로를 검색에서 제외 (true: 활성화 시 사용자 홈 디렉토리의 전역 .gitignore/.ignore 설정도 검색 결과에서 제외됨)

  /* 언어별 포맷터 설정 */
  "[java]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.defaultFormatter": "redhat.java" // Java 파일에서 Red Hat 포맷터 사용
  },
  "[html]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false
    // "editor.defaultFormatter": "vscode.html-language-features" // HTML 파일에서 VSCode HTML 포맷터 사용
  },
  "[xml]": {
    // "editor.defaultFormatter": "DotJoshJohnson.xml" // XML Tools 포맷터 사용
    "editor.defaultFormatter": "inferrinizzard.prettier-sql-vscode" // Prettier SQL 포맷터 사용
  },
  "[sql]": {
    // "editor.defaultFormatter": "inferrinizzard.prettier-sql-vscode" // SQL 파일에서 Prettier SQL 포맷터 사용
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode" // JSONC 파일에서 Prettier 사용
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml" // YAML 파일에서 Red Hat YAML 포맷터 사용
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.python" // Python 파일에서 Microsoft Python 확장 사용
  },

  /** Prettier 설정 (// prettier-ignore: Prettier 포맷팅 무시 주석) */
  "prettier.useEditorConfig": true, // Prettier 에서 .editorconfig 사용 (true: 활성화, .prettierrc / prettier.config.js > .editorconfig > settings.json 순으로 적용)
  "prettier.printWidth": 9999, // 한 줄에 출력되는 코드의 최대 길이 (120자)
  "prettier.tabWidth": 2, // 탭 간격 (기본값: 2)
  "prettier.useTabs": false, // 탭 대신 스페이스 사용 (기본값: false)
  "prettier.semi": true, // 세미콜론 사용 (기본값: true)
  "prettier.singleQuote": true, // 작은 따옴표 사용 (기본값: false)
  "prettier.quoteProps": "as-needed", // 객체 리터럴의 속성 이름에 따옴표 사용 여부 ("as-needed": 필요한 경우만)
  "prettier.trailingComma": "none", // 후행 콤마 사용 방식 ("none": 사용 안 함)
  "prettier.bracketSpacing": false, // 객체 리터럴에서 중괄호 내부에 공백 삽입 여부 (trur: 공백 삽입 { a: 1 }, false: 공백 삽입 안 함 {a: 1})
  "prettier.arrowParens": "always", // 화살표 함수의 매개변수가 하나일 때 괄호 사용 여부 ("always": 항상 사용, "avoid": 괄호 생략)
  "prettier.endOfLine": "lf", // 줄바꿈 방식 ("lf": LF 사용)
  "prettier.jsxSingleQuote": false, // JSX에 작은 따옴표 사용 여부 (false: 사용 안 함)
  "prettier.proseWrap": "preserve", // Markdown 텍스트의 줄바꿈 방식 ("preserve": 원본 유지)
  "prettier.htmlWhitespaceSensitivity": "css", // HTML 공백 감도 설정 ("css": CSS 규칙에 따름)
  "Prettier-SQL.tabSizeOverride": 2,
  "Prettier-SQL.ignoreTabSettings": false,
  "Prettier-SQL.insertSpacesOverride": true,

  /* HTML 설정 */
  "html.format.wrapAttributes": "auto", // HTML 속성의 줄바꿈 방식 ("auto", "force", force-aligned", "force-expand-multiline")
  "html.format.wrapLineLength": 9999, // 속성 줄바꿈 기준 길이 (120자)

  /* Git 설정 */
  "git.autofetch": true, // Git 자동 fetch (true: 활성화)
  "git.confirmSync": false, // Git 동기화 시 확인 메시지 (false: 비활성화)
  "git.useEditorAsCommitInput": false, // 커밋 메시지 입력 시 에디터 사용 (false: 비활성화)
  "git.enableSmartCommit": true, // Stage되지 않은 변경 사항도 커밋 여부 (true: 활성화)

  /* Gradle 설정 */
  "gradle.nestedProjects": false, // 색 테마 설정
  "explorer.compactFolders": false, // 탐색기에서 폴더 압축 여부 (false: 비활성화)
  "explorer.confirmDelete": true, // 파일 삭제 시 확인 메시지 표시 (true: 활성화)
  "breadcrumbs.enabled": true, // 경로 탐색 (true: 활성화)

  /* 디버그 및 터미널 설정 */
  "debug.console.fontSize": 14, // 디버그 콘솔 글꼴 크기
  "terminal.integrated.fontSize": 14, // 터미널 글꼴 크기
  "terminal.integrated.lineHeight": 1.5, // 터미널 줄 높이 (배수)
  "terminal.integrated.env.windows": {
    "LANG": "ko_KR.UTF-8",
    "LC_ALL": "ko_KR.UTF-8"
  },
  "terminal.integrated.env.linux": {
    "LANG": "ko_KR.UTF-8",
    "LC_ALL": "ko_KR.UTF-8"
  },
  "terminal.integrated.env.osx": {
    "LANG": "ko_KR.UTF-8",
    "LC_ALL": "ko_KR.UTF-8"
  },
  "terminal.integrated.fontFamily": "Consolas, 'Courier New', monospace",
  "terminal.integrated.profiles.windows": {
    "Command Prompt (UTF-8)": {
      "path": "C:/Windows/System32/cmd.exe",
      "args": ["/K", "chcp 65001"] // UTF-8 인코딩 설정 (터미널 한글 깨짐 방지, 반대로 UTF-8 이 아닌 로깅에서는 주석 처리 필요)
    },
    "Command Prompt (Default)": {
      "path": "C:/Windows/System32/cmd.exe"
    },
    "PowerShell (UTF-8)": {
      "path": "C:/Windows/System32/WindowsPowerShell/v1.0/powershell.exe",
      "args": ["-NoExit", "-Command", "[Console]::OutputEncoding=[Text.Encoding]::UTF8"] // PowerShell의 출력 인코딩을 UTF-8로 강제 설정 (터미널 한글 깨짐 방지, 반대로 UTF-8 이 아닌 로깅에서는 주석 처리 필요)
    },
    "PowerShell (Default)": {
      "path": "C:/Windows/System32/WindowsPowerShell/v1.0/powershell.exe"
    }
  },
  "terminal.integrated.defaultProfile.windows": "PowerShell (UTF-8)", // 기본 터미널
  "terminal.integrated.scrollback": 10000, // 터미널 스크롤백 줄 수

  /* 기타 확장 설정 */
  "vsintellicode.modify.editor.suggestSelection": "choseToUpdateConfiguration", // IntelliCode 추천 설정
  "redhat.telemetry.enabled": true, // Red Hat Telemetry (true: 활성화)
  "workbench.iconTheme": "material-icon-theme", // 아이콘 테마 설정
  "workbench.startupEditor": "none", // 시작 시 새 Untitled 파일 열기 ("none": 비활성화)
  "sqltools.connections": [],
  "cSpell.words": []
}
